<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"

    tools:context=".fmCirriculum">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/mainLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:background="@color/colorBG1"
                        android:gravity="center"
                        android:text="Current enroll"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="2"
                        android:background="@color/colorBG2"
                        android:gravity="center"
                        android:text="Calculate GPA"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="26sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <FrameLayout
                android:id="@+id/child_fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <com.example.project1.MovableFloatingActionButton

        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"


        android:scaleType="center"
        android:src="@drawable/imageedit_1_5154808899"
        app:fabCustomSize="@dimen/design_fab_size_custom"
        app:maxImageSize="68dp" />

    <com.example.project1.MovableFloatingActionButton

        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"


        android:scaleType="center"
        android:src="@drawable/gear_imageedit"
        app:fabCustomSize="@dimen/design_fab_size_custom"
        app:maxImageSize="68dp" />


</FrameLayout>